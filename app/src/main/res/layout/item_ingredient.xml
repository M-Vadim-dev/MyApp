<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvIngredientDescription"
        style="@style/StyleTitle14Caps"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/main_space_half_8"
        android:layout_marginStart="@dimen/text_space_12"
        android:layout_marginEnd="@dimen/text_space_6"
        android:layout_weight="1"
        tools:text="Подсолнечное масло" />

    <TextView
        android:id="@+id/tvIngredientQuantity"
        style="@style/StyleTitle14Caps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/main_space_half_8"
        android:gravity="end"
        tools:text="5" />

    <TextView
        android:id="@+id/tvIngredientUnitOfMeasure"
        style="@style/StyleTitle14Caps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/main_space_half_8"
        android:layout_marginStart="@dimen/text_space_6"
        android:layout_marginEnd="@dimen/text_space_12"
        android:gravity="end"
        tools:text="ст. ложка" />

</LinearLayout>